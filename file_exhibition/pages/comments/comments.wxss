/*水平分割线*/
.lines{
  margin-top:3rpx;
  margin-bottom:15rpx;
  background:rgb(171, 179, 156);
  width:100%;
  height:8rpx;
}
/*评论列表容器*/
.container{
  width:100%;
  height:100%;
  display:flex;
  flex-direction:column;
}
.container .userInfo-container{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
  margin-left:20rpx;
}
/*昵称字体*/
.container .userInfo-container .text{
  font-size:30rpx;
  margin-top:8rpx;
  margin-left:20rpx;
}
.container .comments-container{
  width:100%;
  height:140rpx;
  padding-left:40rpx;
  margin-top:-25rpx;
}
/*评论字体*/
.container .comments-container .comment-text{
  font-size:28rpx;
}

image{
  width:50rpx;
  height:50rpx;
  display:block;
  border:7rpx solid rgb(165, 184, 189);
  border-radius: 10rpx;
}
/*******************************************************************************************************/
/*搜索框*/
.search-box{
  background-color:rgb(29, 243, 161);
  margin-top:10rpx;
  padding-top:7rpx;
  padding-bottom:5rpx;
  display:flex;
  flex-direction:row;
  width:100%;
  height:80rpx;
}
.search-img{
  width:50rpx;
  height:50rpx;
  
  margin-top:25rpx;
  margin-left:20rpx;
}
/*提交查询按钮*/
.submit-button{
  margin-left: 20rpx;
  font-size:30rpx;
  height:45rpx;
  width:90rpx;
  background-color: rgb(34, 138, 65);
  margin-top:15rpx;
  padding-top:8rpx;
  border:1rpx solid  rgb(9, 94, 34);
  border-radius:15rpx;
}
.search-text{
  align-items:center;
  padding-left:18rpx;
}

/*输入框*/
.search-input{
  font-size:32rpx;
  width:550rpx;
  height:65rpx;
  background-color:rgb(236, 248, 241);
  border: 1rpx solid rgb(233, 238, 236);
  border-radius:15rpx;
  margin-top:8rpx;

}