 @import "../movie-info/movie-info.wxss";
/*水平分割线*/
.lines{
  
  margin-bottom:0rpx;
  background:rgb(183, 187, 174);
  width:100%;
  height:8rpx;
}
.total-container{
  display:flex;
  flex-direction:column;
  background-color:black;
}

/*搜索框*/
.search-box{
  background-color:rgb(29, 243, 161);
  margin-top:10rpx;
  padding-top:7rpx;
  padding-bottom:5rpx;
  display:flex;
  flex-direction:row;
  width:100%;
  height:80rpx;
}
.search-img{
  width:50rpx;
  height:50rpx;
  
  margin-top:25rpx;
  margin-left:20rpx;
}
/*提交查询按钮*/
.submit-button{
  margin-left: 20rpx;
  font-size:30rpx;
  height:45rpx;
  width:90rpx;
  background-color: rgb(34, 138, 65);
  margin-top:15rpx;
  padding-top:8rpx;
  border:1rpx solid  rgb(9, 94, 34);
  border-radius:15rpx;
}
.search-text{
  align-items:center;
  padding-left:18rpx;
}

/*输入框*/
.search-input{
  font-size:32rpx;
  width:550rpx;
  height:65rpx;
  background-color:rgb(236, 248, 241);
  border: 1rpx solid rgb(233, 238, 236);
  border-radius:15rpx;
  margin-top:8rpx;

}