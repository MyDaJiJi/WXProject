@import "../movie-tepl/movie-tepl.wxss";
/*电影状态*/
.movie-type{
  float:left;
  font-size:32rpx;
  font-weight:bold;
  margin-left:50rpx;
  
}
/*更多*/
.more{ 
  float:right;
  position:absolute;
  right:25px;
}
.more-text{
  font-size:32rpx;
  font-weight:bold;
}
/*模板总容器*/
.movie-list-container{
  height:450rpx;
  width:750rpx;
  align-items:center;
  background-color:rgb(236, 238, 240);
  margin-top:-1rpx;
  
}
/*模板头与电影列表*/
.inner-container{
  display:flex;
  flex-direction:column;
  margin:5rpx;
}
/*电影列表容器*/
.movie-container{
  display:flex;
  flex-direction:row;
  margin-top:30rpx;
}
/*水平分割线*/
.lines{
  margin-top:3rpx;
  margin-bottom:15rpx;
  background:rgb(171, 179, 156);
  width:100%;
  height:8rpx;
}

