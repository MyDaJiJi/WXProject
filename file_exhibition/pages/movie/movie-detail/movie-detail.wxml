
<view class="container">
  <image class="head-img" src="{{movie.movieImg}}" mode="aspectFill" />
  <view class="head-img-hover">
    <text class="main-title">{{movie.title}}</text>
    <text class="sub-title">{{movie.country + " · "+movie.year}}</text>
    <view class="like">
      <text class="highlight-font">
        {{movie.wishCount}}
      </text>
      <text class="plain-font">
        人喜欢
      </text>
      <text class="highlight-font">
        {{movie.commentCount}}
      </text>
      <text class="plain-font">
        条评论
      </text>
    </view>
  </view>
  <image class="movie-img" src="{{movie.movieImg}}" data-src="{{movie.movieImg}}" catchtap="viewMoviePostImg"/>
  <view class="summary">
    <view class="original-title">
      <text>{{movie.originalTitle}}</text>
    </view>
    <view class="flex-row">
      <text class="mark">评分</text>
      <!--<template is="starsTpl" data="{{stars:movie.stars, score:movie.score}}" />-->
    </view>
    <view class="flex-row">
      <text class="mark">导演</text>
      <text>{{movie.director.name}}</text>
    </view>
    <view class="flex-row">
      <text class="mark">影人</text>
      <text>{{movie.casts}}</text>
    </view>
    <view class="flex-row">
      <text class="mark">类型</text>
      <text>{{movie.generes}}</text>
    </view>
  </view>
  <view class="hr"></view>
  <view class="synopsis">
    <text class="synopsis-font">剧情简介</text>
    <text class="summary-content">{{movie.summary}}</text>
  </view>
  <view class="hr"></view>
  <view class="cast">
    <text class="cast-font"> 影人</text>
    <!--
    <scroll-view class="cast-imgs" scroll-x="true" style="width:100%">
    
      <block wx:for="{{movie.castsInfo}}" wx:key = 'NaN'  wx:for-item="item">
        <view class="cast-container">
          <image class="cast-img" src="{{item.img}}"></image>
          <text class="cast-name">{{item.name}}</text>
        </view>
      </block>
    </scroll-view>-->
  </view>
  <!--我的代码-->
  
  <view class = "my-container">
    <!--收藏图标-->
    <view class = "collection-container" catchtap="onCollection" >
      <image wx:if = "{{static_data.collection}}" src = "{{static_data.collection_true}}"/>
      <image wx:else src = "{{static_data.collection_false}}"/>
      <view class = "text-container">
        <text>收藏</text>
      </view>
    </view>
    <!--品论图标-->
    <view class = "comment-container" catchtap = "onComment">
      <image src = "{{static_data.comment_image}}"/>
      <view class = "text-container">
        <text>评论</text>
      </view>
    </view>
    <!--点赞图标-->
    <view class = "like-container" catchtap = "onLike">
      <image wx:if = "{{static_data.like}}" src = "{{static_data.like_true}}"/>
      <image wx:else src = "{{static_data.like_false}}"/>
      <view class = "text-container">
        <text>点赞</text>
      </view>
    </view>
  </view>
</view>
